type Query {
    bookById(id: ID): Book
    authorById(id: ID) : Author
    books(ids : [ID!], offset : Int = 0, limit : Int = 10) : [Book]!
    authors(ids : [ID!], offset : Int = 0, limit : Int = 10) : [Author]!
}

type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
    books(offset: Int = 0, limit : Int = 10): [Book]!
}